<form id="new-todo-form">
    <div class="form-group">
      <label>Title</label>
      {{input type="text" class="form-control" value=title placeholder="Add todo" required="required"}}  
    </div>

       <div class="form-group">
       <label>Due Date</label>
         {{input type="date" class="form-control" value=date required="required"}}  
      </div>

       <div class="form-group">
      <label>Body</label>
      {{textarea  class="form-control" value=body placeholder="Add Description"}}  
    </div>

    <button {{action 'addTodo'}} class="btn btn-primary">
      Submit
    </button>

    {{#link-to 'todos' class="btn btn-default"}}Close{{/link-to}}

</form>
